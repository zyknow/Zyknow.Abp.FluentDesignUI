@using TResource = Volo.Abp.Identity.Localization.IdentityResource
@using TInput = Volo.Abp.Identity.IdentityRoleUpdateDto
@inherits AbpDialogFormBase<TInput,TResource>

<AbpDialogForm HeaderText="@($@"{L["Edit"]} - {Content.Name}")"
               IsConstHeader="true"
               Content="@Content"
               CancelClick="@CancelClick"
               Localize="@LH.Localize"
               SubmitClick="@SubmitClick">
    <FluentTextField Style="width: 100%" Label="@L["RoleName"]" @bind-Value="@Content.Name" />
    <FluentValidationMessage For="@(() => Content.Name)" />

    <ExtensionProperties Entity="@Content" LH="@LH" />

    <FluentStack Orientation="Orientation.Vertical" VerticalGap="10" Style="margin-top:10px">
        <FluentCheckbox @bind-Value="Content.IsDefault" Label="@L["DisplayName:IsDefault"]"></FluentCheckbox>
        <FluentCheckbox @bind-Value="Content.IsPublic" Label="@L["DisplayName:IsPublic"]"></FluentCheckbox>
    </FluentStack>

</AbpDialogForm>
