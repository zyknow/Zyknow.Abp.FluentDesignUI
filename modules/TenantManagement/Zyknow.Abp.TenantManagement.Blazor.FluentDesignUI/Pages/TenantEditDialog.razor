@using TInput = Volo.Abp.TenantManagement.TenantUpdateDto
@using TResource = Volo.Abp.TenantManagement.Localization.AbpTenantManagementResource
@inherits AbpDialogFormBase<TInput,TResource>

<AbpFluentForm HeaderText="@($@"{L["Edit"]} - {Content.Name}")"
               IsConstHeader="true"
               Content="@Content"
               SubmitValidClick="SubmitClick"
               CancelClick="CancelClick"
               Localize="@LH.Localize">
    <FluentTextField Style="width: 100%" Label="@L["TenantName"]" @bind-Value="@Content.Name" />
    <FluentValidationMessage For="@(() => Content.Name)" />

    <ExtensionProperties TEntityType="TInput" TResourceType="TResource"
                         Entity="@Content" LH="@LH" />
</AbpFluentForm>
