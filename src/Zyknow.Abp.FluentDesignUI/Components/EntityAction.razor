@typeparam TItem

@if (Visible && HasPermission)
{
    if (ParentActions != null)
    {
        if (ParentActions.Type == ActionType.Dropdown)
        {
            if (!Primary)
            {
                <FluentMenuItem Disabled="@Disabled" OnClick="ActionClickedAsync">
                    <FluentLabel Style="@(@$"color:{Color}")">@Text</FluentLabel>
                </FluentMenuItem>
            }
            else
            {
                <FluentButton IconStart="@Icon" disabled="@Disabled"
                              Color="@Color"
                              Appearance="@Appearance"
                              StopPropagation="true"
                              OnClick="@ActionClickedAsync">
                    @Text
                </FluentButton>
            }
        }
        else
        {
            <FluentButton IconStart="@Icon" disabled="@Disabled"
                          Appearance="@Appearance"
                          StopPropagation="true"
                          Color="@Color"
                          OnClick="@ActionClickedAsync">
                @Text
            </FluentButton>
        }
    }
}
