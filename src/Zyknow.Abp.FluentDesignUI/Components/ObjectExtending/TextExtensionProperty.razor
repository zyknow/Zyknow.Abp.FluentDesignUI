@typeparam TEntity
@typeparam TResourceType
@using Volo.Abp.Localization
@inherits ExtensionPropertyComponentBase<TEntity, TResourceType>

@if (PropertyInfo != null && Entity != null)
{
    <div>
        <FluentTextField @bind-Value="@Value" TextFieldType="@PropertyInfo.GetTextInputMode()"
                         Label="@PropertyInfo.GetLocalizedDisplayName(StringLocalizerFactory)"></FluentTextField>
        <FluentValidationMessage For="@(() => Value)"/>
    </div>
}